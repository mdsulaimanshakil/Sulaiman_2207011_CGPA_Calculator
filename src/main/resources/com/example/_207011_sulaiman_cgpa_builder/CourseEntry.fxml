<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example._207011_sulaiman_cgpa_builder.CourseEntryController"
            stylesheets="@Style.css">

    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #1976d2; -fx-border-color: #1565c0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12"/>
            </padding>
            <Label text="Course Entry" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Text text="Add courses and track your progress" style="-fx-font-size: 9; -fx-fill: #e3f2fd;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <VBox spacing="6">
                <Label text="Target Credits" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>

                <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 8;">
                    <Label text="Credits:" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="targetCreditsField" promptText="e.g., 12" style="-fx-padding: 4; -fx-font-size: 10;" HBox.hgrow="ALWAYS"/>
                    <Button text="Set" fx:id="setCreditsButton" style="-fx-padding: 4 12 4 12; -fx-font-size: 10; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <VBox spacing="6" style="-fx-background-color: #f0f8ff; -fx-border-color: #1976d2; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 10;">
                <HBox spacing="20" style="-fx-padding: 0;">
                    <VBox alignment="CENTER" spacing="2">
                        <Label text="Target" style="-fx-font-size: 9; -fx-text-fill: #666;"/>
                        <Label fx:id="targetCreditsLabel" text="--" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="2">
                        <Label text="Taken" style="-fx-font-size: 9; -fx-text-fill: #666;"/>
                        <Label fx:id="takenCreditsLabel" text="0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="2">
                        <Label text="Remaining" style="-fx-font-size: 9; -fx-text-fill: #666;"/>
                        <Label fx:id="remainingCreditsLabel" text="--" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f57f17;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="2" HBox.hgrow="ALWAYS">
                        <Label fx:id="progressPercentageLabel" text="0%" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                        <ProgressBar fx:id="creditProgressBar" progress="0" prefHeight="8" style="-fx-padding: 0;"/>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="6">
                <Label text="Add Course" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>

                <GridPane hgap="8" vgap="6" styleClass="course-form" style="-fx-padding: 10;">
                    <Label text="Name*" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="nameField" promptText="Mathematics" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Label text="Code*" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="codeField" promptText="CS101" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Label text="Credits*" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="creditField" promptText="3" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Label text="Teacher 1" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="teacher1Field" promptText="Optional" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Label text="Teacher 2" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <TextField fx:id="teacher2Field" promptText="Optional" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Label text="Grade*" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 10;"/>
                    <ComboBox fx:id="gradeBox" promptText="Select" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" style="-fx-font-size: 10; -fx-padding: 4;"/>

                    <Button text="Add" fx:id="addButton" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="RIGHT" style="-fx-padding: 5 15 5 15; -fx-font-size: 10; -fx-font-weight: bold;"/>
                </GridPane>
            </VBox>

            <VBox spacing="6" VBox.vgrow="ALWAYS">
                <Label text="Courses" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                <TableView fx:id="courseTable" prefHeight="150" styleClass="course-table" VBox.vgrow="ALWAYS" style="-fx-font-size: 9;">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Name" prefWidth="100"/>
                        <TableColumn fx:id="codeCol" text="Code" prefWidth="60"/>
                        <TableColumn fx:id="creditCol" text="Cr" prefWidth="40"/>
                        <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="80"/>
                        <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="80"/>
                        <TableColumn fx:id="gradeCol" text="Grade" prefWidth="50"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12"/>
            </padding>
            <Button text="Reset" fx:id="resetButton" style="-fx-padding: 6 15 6 15; -fx-font-size: 10;"/>
            <Button text="Calculate GPA" fx:id="calculateButton" styleClass="main-btn" style="-fx-padding: 6 18 6 18; -fx-font-size: 10;" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>